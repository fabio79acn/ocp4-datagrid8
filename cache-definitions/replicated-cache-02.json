{
    "replicated-cache": {
        "encoding": {
           "key": {
              "media-type": "application/x-www-form-urlencoded"
            },
            "value": {
              "media-type": "application/x-www-form-urlencoded"
            }

        },
        "expiration": {
            "max-idle": -1,
            "lifespan": -1,
            "interval": 60000
        },
        "indexing": {
            "enabled": false
        },
        "memory": {
            "max-size": "100MB",
            "max-count": -1,
            "when-full": "REMOVE",
            "storage": "HEAP"
        },
        "mode": "SYNC",
        "partition-handling": {
            "when-split": "ALLOW_READ_WRITES",
            "merge-policy": "REMOVE_ALL"
        },
        "state-transfer": {
            "enabled": true,
            "await-initial-transfer": true
        },
        "statistics": true,
        "transaction": {
            "mode": "NONE"
        },
     "persistence": {
        "passivation": false,
        "file-store": {
          "path": "/opt/infinispan/server/data/"
      }
    }
    }
}

